<h1>Items#edit</h1>
<p>Find me in app/views/items/edit.html.erb</p>


	<%= form_with(model: @item, url: user_item_path(@item, current_user), method: "patch", local: true) do |f| %>
			
			<%= render 'shared/error_messages', object: f.object %>


	<%= f.label :name %>
	<%= f.text_field :name %>
	
	<%= f.label :description %>
	<%= f.text_field :description %>

	<%= f.hidden_field :user_id, value: current_user.id %>

<%= f.submit "Add item"%>	


	<% end%>
